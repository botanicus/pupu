#!/usr/bin/env ruby

gem "merb_pupu"
require "merb_pupu/pupu"

case ARGV.shift
when "install"
  # pupu install autocompleter
  # pupu install botanicus/autocompleter
  CLI.install(ARGV)
when "update"
  # update the stuff exclude initializers
  CLI.update(ARGV)
when "remove", "uninstall"
  # pupu uninstall autocompleter
  CLI.uninstall(ARGV)
when "list"
  CLI.list(ARGV)
else
  puts "=== Usage ==="
  puts "pupu install autocompleter ... install autocompleter pupu from current user's repo"
  puts "pupu install botanicus/autocompleter ... install autocompleter pupu from botanicus's repo"
  puts "pupu uninstall autocompleter ... uninstall autocompleter pupu"
  puts "pupu update ... update all pupu"
  puts "pupu update autocompleter ... update autocompleter pupu"
  puts "pupu list ... list all installed pupus"
end
